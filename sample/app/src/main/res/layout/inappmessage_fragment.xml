<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inAppMessage_constraintLayout_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/inAppMessage_button_notify"
        app:layout_constraintVertical_bias="0"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/inAppMessage_textView_recently_called_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0"
                style="@style/TextAppearance.AppCompat.Large"
                android:text="Recently called event"
                />
            <ImageView
                android:id="@+id/inAppMessage_imageView_deleteRecentlyEvents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_delete_24"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/inAppMessage_textView_recently_called_event"
                app:layout_constraintBottom_toBottomOf="@id/inAppMessage_textView_recently_called_event"
                app:layout_constraintHorizontal_bias="1"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/inAppMessage_recyclerView_recently_called_event"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.75"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/inAppMessage_textView_recently_called_event"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"
                />
            <TextView
                android:id="@+id/inAppMessage_textView_noData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/inAppMessage_recyclerView_recently_called_event"
                app:layout_constraintBottom_toBottomOf="@id/inAppMessage_recyclerView_recently_called_event"
                android:text="No Data"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/inAppMessage_textView_environment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/inAppMessage_recyclerView_recently_called_event"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0"
                style="@style/TextAppearance.AppCompat.Large"
                android:text="Test Environment"
                />
            <TextView
                android:id="@+id/inAppMessage_textView_editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/inAppMessage_textView_environment"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0"
                style="@style/TextAppearance.AppCompat.Medium"
                android:text="EditText"
                />
            <EditText
                android:id="@+id/inAppMessage_editText"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/inAppMessage_textView_editText"
                app:layout_constraintBottom_toBottomOf="@id/inAppMessage_textView_editText"
                app:layout_constraintHorizontal_bias="1"
                />
            <TextView
                android:id="@+id/inAppMessage_textView_moveActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/inAppMessage_editText"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0"
                style="@style/TextAppearance.AppCompat.Medium"
                android:text="Event execution after activity changed"
                />
            <CheckBox
                android:id="@+id/inAppMessage_checkBox_moveActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/inAppMessage_textView_moveActivity"
                app:layout_constraintBottom_toBottomOf="@id/inAppMessage_textView_moveActivity"
                app:layout_constraintHorizontal_bias="1"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/inAppMessage_button_notify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1"
        android:text="notify"
        />
</androidx.constraintlayout.widget.ConstraintLayout>